<%- include ("partials/header") %>

<main class="form-signin w-50 m-auto" id="adminForm">
  <form action="/submit" method="POST" class="w-100">
    <img class="mb-4" src="/images/logo.png" alt="logo" width="72" height="57" />
    <h1 class="h3 mb-3 fw-normal">Confirm as admin</h1>
    
    <div class="row alter-w-75">
      <div class="col-xl-6 col-md-12 alter-p">
        <label for="FormControlInput1" class="form-label">Username</label>
        <input
          type="text"
          class="form-control"
          id="FormControlInput1"
          placeholder="Your name on the blog"
          name="authorName"
        />
      </div>
    </div>
  </div>
  <div class="mb-3">
    <label for="FormControlTextarea1" class="form-label"
      >Password</label
    >
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        id="floatingPassword"
        name="password"
        placeholder="Password"
        required
      />
</div>
  </div>
  

    <div class="form-check text-start my-3">
      <input
        class="form-check-input"
        type="checkbox"
        value="remember-me"
        id="flexCheckDefault"
      />
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <div class="mb-3">
      <button class="btn btn-success py-2 px-3" type="submit">Sign in</button>
    </div>
  </form>
</main>

<%- include ("partials/mini-footer") %>
