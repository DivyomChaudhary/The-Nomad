<%- include ("partials/header") %>
<%- include ("partials/navbar") %>

<div class="container">
    <main class="form-signin w-100 d-flex justify-content-center mt-5" id="signupForm">
        <form action="/signup" method="POST" class="text-center">
            <img class="mb-4" src="https://blog-server-1-assets.s3.us-east-1.amazonaws.com/public/images/logo.png" alt="logo" width="72" height="57" />
            <h1 class="h3 mb-3 fw-normal">Create Account</h1>

            <div class="row pb-1">
                <div class="col-xl-8 col-md-12 mx-auto alter-p">
                    <div class="form-floating">
                        <input
                            type="text"
                            class="form-control w-100"
                            id="signupUsername"
                            name="username"
                            placeholder="Choose Username"
                            autocomplete="username"
                            required
                        />
                        <label for="signupUsername">Username</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-8 col-md-12 mx-auto alter-p">
                    <div class="form-floating">
                        <input
                            type="password"
                            class="form-control"
                            id="signupPassword"
                            name="password"
                            placeholder="Password"
                            autocomplete="new-password"
                            required
                        />
                        <label for="signupPassword">Password</label>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-xl-8 col-md-12 mx-auto alter-p">
                    <% if (error) { %>
                        <div class="alert alert-danger text-center" role="alert">
                            <%= message || "An error occurred during signup." %>
                        </div>
                    <% } %>
                </div>
            </div>

            <button class="w-100 btn btn-success py-2 px-3 mt-3" type="submit">Sign Up</button>
            <p class="mt-3 mb-5">Already have an account? <a href="/admin">Login here</a></p>
        </form>
    </main>
</div>